generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String               @id @default(uuid())
  email           String            @unique
  password        String
  name            String?
  photo           String?
  createdAt       DateTime          @default(now())
  rooms           Room[]  @relation("UserRooms")
}

model Room {
  id              String          @id @default(uuid()) // The unique Room ID
  title           String
  hostId          String
  host            User            @relation("UserRooms", fields: [hostId], references: [id])
  createdAt       DateTime        @default(now())
}